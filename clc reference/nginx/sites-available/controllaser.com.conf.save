server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name www.controllaser.com;
	set $base /home/townes;
	root $base/controllaser.com;

	access_log /home/townes/logs/controllaser.com/https/access.log;

	error_log /home/townes/logs/controllaser.com/https/error.log;

	#SSL
	ssl     on;
        ssl_certificate /etc/nginx/keys/www_controllaser_com.pem;
        ssl_certificate_key /etc/nginx/keys/controllaser.com.key;
ssl	on;
	ssl_certificate /etc/nginx/keys/www_controllaser_com.pem;
	ssl_certificate_key /etc/nginx/keys/controllaser.com.key;
    #ssl_certificate /etc/letsencrypt/live/www.controllaser.com/fullchain.pem;
    #ssl_certificate_key /etc/letsencrypt/live/www.controllaser.com/privkey.pem;
    #ssl_trusted_certificate /etc/letsencrypt/live/www.controllaser.com/chain.pem;
    #include snippets/ssl.conf;
    #include snippets/letsencrypt.conf;

	# index.php
	index index.php;

	# index.php fallback
	location / {
		try_files $uri $uri/ /index.php?$query_string;
	}

	# handle .php
	location ~ \.php$ {
		include nginxconfig.io/php_fastcgi.conf;
	}



	include nginxconfig.io/general.conf;
	include nginxconfig.io/wordpress.conf;
}

# non-www, subdomains redirect
server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name controllaser.com;
	access_log /home/townes/logs/controllaser.com/https/access.log;

	error_log /home/townes/logs/controllaser.com/https/error.log;

	#SSL
    ssl_certificate /etc/letsencrypt/live/www.controllaser.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.controllaser.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/www.controllaser.com/chain.pem;
    include snippets/ssl.conf;
    include snippets/letsencrypt.conf;

	return 301 https://www.controllaser.com$request_uri;
}

# HTTP redirect
server {
	listen 80;
	listen [::]:80;

	server_name controllaser.com www.controllaser.com;
	
	access_log /home/townes/logs/controllaser.com/https/access.log;
	error_log /home/townes/logs/controllaser.com/https/error.log;
	
	include snippets/letsencrypt.conf;
	return 301 https://www.controllaser.com$request_uri;
}
